user function rdt030a()

local fantigo := dbfilter()
local fnovo   := "A1_DMXATIV == '1'"

// Aplica filtro novo na tabela

dbselectarea("SA1")
dbsetfilter({ || &fnovo }, fnovo)

mata030()

// Volta filtro antigo

dbselectarea("SA1")
if !empty(fantigo)
  dbsetfilter({ || &fantigo }, fantigo)
else
  dbclearfil()
endif

return .t.